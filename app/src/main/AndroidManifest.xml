<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avarsava.stuttersupport">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature android:name="android.hardware.screen.portrait" />

    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.avarsava.stuttersupport.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.avarsava.stuttersupport.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.TrainGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.BasketballGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.DeepBreatheActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.SettingsScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.LicensesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.ScriptReadingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.NotificationSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.ThoughtTrackerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.avarsava.stuttersupport.ParentTeacherInterfaceActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.avarsava.stuttersupport.SetupActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.avarsava.stuttersupport.PTIPasswordActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="com.avarsava.stuttersupport.IntentHandler"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>